@model Racoca_DSWI.Models.Voluntario
@{
    ViewData["Title"] = "Paso1";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card px-5 py-4" style="width: 520px; border-radius: 24px; border: 1px solid #eee; box-shadow:none;">
        <div class="mb-1">
            <a href="javascript:history.back()" class="text-decoration-none text-dark small">Regresa</a>
        </div>

        <h4 class="text-center mb-4" style="font-weight: 600;">Cuenta del voluntario</h4>

        <form asp-action="Paso1" method="post" class="d-inline">
            <div class="row mb-3">
                <div class="col-6">
                    <input asp-for="Nombre" class="form-control" style="padding:10px;" placeholder="Nombre" />
                </div>
                <div class="col-6">
                    <input asp-for="Apellido" class="form-control" style="padding:10px;" placeholder="Apellido" />
                </div>
            </div>

            <div class="mb-3">
                <input asp-for="Celular" class="form-control" style="padding:10px;" placeholder="Celular" />
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <input asp-for="Cuidad" class="form-control" style="padding:10px;" placeholder="Ciudad" />
                </div>
                <div class="col-6">
                    <input asp-for="Distrito" class="form-control" style="padding:10px;" placeholder="Distrito" />
                </div>
            </div>

            <div class="mb-3">
                <input asp-for="FechaNacimiento" class="form-control" style="padding:10px;" type="date" placeholder="Fecha de nacimiento" />
            </div>

            <div class="form-check mb-4">
                <input asp-for="MayorDeEdad" class="form-check-input" />
                <label asp-for="MayorDeEdad" class="form-check-label">Soy mayor de edad</label>
            </div>

            <button type="submit" class="btn btn-racacoca-negro w-100 py-2" style="font-size: 1rem;">Continuar</button>
            <p class="text-center mt-3 small" style="margin-bottom:0;">1/3</p>
        </form>
    </div>
</div>