@model List<Racoca_DSWI.Models.Evento>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .card-racacoca {
        border: 1.5px solid #cfcfcf;
        border-radius: 20px;
        box-shadow: none !important;
        background: #fff;
    }



     .img-racacoca {
        padding: 0;
        border-radius: 16px 16px 0 0;
        border: 1.5px solid #cfcfcf;
        width: 100%;
        display: block;
    }


    .text-justify {
        text-align: justify;
    }


</style>


<div class="container mt-4">

    <form method="get" class="row mb-4 g-2">

        <div class="col-md-4">
            <input type="text"
                   name="buscar"
                   value="@Context.Request.Query["buscar"]"
                   class="form-control"
                   placeholder="Evento de interés, palabra clave...">
        </div>

        <div class="col-md-3">
            <select name="categoria" class="form-control">
                <option value="">Categoría</option>
                <option value="Deportivo">Deportivo</option>
                <option value="Cultural">Cultural</option>
                <option value="Educativo">Educativo</option>
                <option value="Social">Social</option>
            </select>
        </div>

        <div class="col-md-3">
            <select name="ubicacion" class="form-control">
                <option value="">Ubicación</option>
                <option value="Lima">Lima</option>
                <option value="Cusco">Cusco</option>
                <option value="Arequipa">Arequipa</option>
            </select>
        </div>

        <div class="col-md-2">
            <button class="btn btn-dark w-100">
                Buscar
            </button>
        </div>

    </form>
    @{
        var categoriaSeleccionada = Context.Request.Query["categoria"].ToString();
    }

    @if (!string.IsNullOrEmpty(categoriaSeleccionada))
    {
        <div class="mb-4 text-center">
            <h2 class="fw-bold">
                Categoría:
                <span class="text-secondary">
                    @categoriaSeleccionada
                </span>
            </h2>
            <hr style="width: 120px; margin: 12px auto;">
        </div>
    }
    else
    {
        <div class="mb-4 text-center">
            <h2 class="fw-bold">
                Todos los eventos
            </h2>
            <hr style="width: 120px; margin: 12px auto;">
        </div>
    }



    <div class="row">

        @if (!Model.Any())
        {
            <div class="col-12 text-center mt-5">
                <h5 class="text-muted">No se encontraron eventos.</h5>
            </div>
        }

        @foreach (var grupo in Model.GroupBy(e => e.Categoria))
        {
            <div class="col-12 mt-4 mb-3">
                <h2 class="fw-bold">
                    Evento
                    <span class="text-secondary">@grupo.Key</span>
                </h2>
                <hr style="width: 120px; margin: 12px auto;">
            </div>

            @foreach (var evento in grupo)
            {
                <div class="col-md-3 mb-4">
                    <div class="card card-racacoca h-100">

                        <div class="position-relative">
                            <img src="@evento.Imagen"
                                 class="img-racacoca"
                                 style="height:180px; object-fit:cover;"
                                 alt="Imagen del evento">

                            <span class="badge bg-danger position-absolute top-0 end-0 m-2 px-3 py-2">
                                @evento.Cupos cupos disponibles
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column p-4">

                            <div class="d-flex justify-content-between align-items-center mb-2 small text-muted">
                                <div>
                                    Organización:
                                    <b class="d-block">@evento.Organizacion</b>
                                </div>

                                <div class="text-end">
                                    <i class="bi bi-geo-alt-fill text-danger"></i>
                                    @evento.Ubicacion
                                </div>
                            </div>

                            <p class="small text-secondary text-justify">
                                @evento.Descripcion
                            </p>



                            <a href="#"
                               class="btn btn-racacoca-negro w-100 mt-3 fw-bold">
                                Unirme al evento
                            </a>

                        </div>
                    </div>
                </div>
            }
        }

    </div>


    <div class="d-flex justify-content-center mt-4">
        <nav>
            <ul class="pagination">

                <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="/Eventos/Index?pagina=@(ViewBag.PaginaActual - 1)">
                        Anterior
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                        <a class="page-link" href="/Eventos/Index?pagina=@i">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                    <a class="page-link"
                       href="/Eventos/Index?pagina=@(ViewBag.PaginaActual + 1)">
                        Siguiente
                    </a>
                </li>

            </ul>
        </nav>
    </div>

</div>



