@model Proyecto_DSWI.Models.VoluntarioPerfilVM

@{
    ViewData["Title"] = "Mi Perfil";

    string avatarUrl;
    if (!string.IsNullOrWhiteSpace(Model.FotoPerfilUrl))
    {
        avatarUrl = Url.Content(Model.FotoPerfilUrl);
    }
    else if ((Model.Sexo ?? "").ToUpper() == "F")
    {
        avatarUrl = Url.Content("~/uploads/avatars/avatar_female.png");
    }
    else if ((Model.Sexo ?? "").ToUpper() == "M")
    {
        avatarUrl = Url.Content("~/uploads/avatars/avatar_male.png");
    }
    else
    {
        avatarUrl = Url.Content("~/uploads/avatars/avatar_neutral.png");
    }
}

@if (TempData["OK"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["OK"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
<link rel="stylesheet" href="~/css/racoca.css" />

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <div class="racoca-eyebrow">RACOCA • Perfil</div>
            <h2 class="racoca-h2 mb-0">@Model.NombreCompleto</h2>
            <div class="racoca-sub">@Model.Email</div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn racoca-btn-outline"
               asp-controller="Perfil"
               asp-action="EditarVoluntario"
               asp-route-id="@Model.UsuarioId">
                <i class="bi bi-pencil-square me-2"></i>Editar
            </a>

            <a class="btn racoca-btn" href="#">
                <i class="bi bi-search-heart me-2"></i>Explorar eventos
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="racoca-card p-4">
                <div class="text-center">
                    <img class="racoca-avatar"
                         src="@avatarUrl"
                         alt="Foto perfil" />

                    <div class="mt-3">
                        <span class="racoca-badge me-2">
                            <i class="bi bi-shield-check me-1"></i>@Model.Rol
                        </span>
                        <span class="racoca-badge-soft">
                            <i class="bi bi-lightning-charge me-1"></i>@Model.Estado
                        </span>
                    </div>
                </div>

                <hr class="racoca-hr" />

                <div class="racoca-kv">
                    <div class="row g-2">
                        <div class="col-6">
                            <div class="racoca-k">Celular</div>
                            <div class="racoca-v">@(!string.IsNullOrWhiteSpace(Model.Celular) ? Model.Celular : "-")</div>
                        </div>
                        <div class="col-6">
                            <div class="racoca-k">Sexo</div>
                            <div class="racoca-v">@(!string.IsNullOrWhiteSpace(Model.Sexo) ? Model.Sexo : "-")</div>
                        </div>
                        <div class="col-12">
                            <div class="racoca-k">Ubicación</div>
                            <div class="racoca-v">
                                @(!string.IsNullOrWhiteSpace(Model.Ciudad) ? Model.Ciudad : "-")
                                •
                                @(!string.IsNullOrWhiteSpace(Model.Distrito) ? Model.Distrito : "-")
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="racoca-k">Nacimiento</div>
                            <div class="racoca-v">
                                @(Model.FechaNacimiento.HasValue? Model.FechaNacimiento.Value.ToString("dd/MM/yyyy") : "-")
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-grid gap-2">
                    <a class="btn racoca-btn" href="#"><i class="bi bi-person-check me-2"></i>Ver credibilidad</a>
                    <a class="btn racoca-btn-ghost" href="#"><i class="bi bi-gear me-2"></i>Configuración</a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="racoca-card p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="racoca-h5 mb-0"><i class="bi bi-stars me-2"></i>Habilidades</h5>
                    <a class="racoca-link" href="#"><i class="bi bi-plus-circle me-1"></i>Agregar</a>
                </div>

                <p class="racoca-muted mt-2 mb-4">
                    Marca tus habilidades para que las organizaciones te encuentren más rápido.
                </p>

                @if (Model.Habilidades.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var h in Model.Habilidades)
                        {
                            <span class="racoca-chip">
                                <i class="bi bi-check2-circle me-1"></i>@h
                            </span>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        Aún no tienes habilidades registradas.
                    </div>
                }
            </div>

            <div class="racoca-card p-4 mt-4">
                <h5 class="racoca-h5 mb-2"><i class="bi bi-heart-pulse me-2"></i>Recomendado para ti</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="racoca-mini">
                            <div class="racoca-mini-title"><i class="bi bi-camera me-2"></i>Foto y bio</div>
                            <div class="racoca-muted">Sube una foto y una descripción corta. Te da confianza.</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="racoca-mini">
                            <div class="racoca-mini-title"><i class="bi bi-geo-alt me-2"></i>Ubicación</div>
                            <div class="racoca-muted">Completa distrito para sugerencias precisas de eventos.</div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
