@model Proyecto_DSWI.Models.RegistroVoluntarioPaso1VM
@{
    ViewData["Title"] = "Registro Voluntario - Paso 1";
}

<div class="container mt-4" style="max-width:520px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-link p-0" href="javascript:history.back()">Regresa</a>
    </div>

    <div class="card border-0">
        <div class="card-body">
            <h3 class="text-center mb-3">Información personal</h3>

            <form asp-action="VoluntarioPaso1" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="row g-2">
                    <div class="col-6">
                        <label class="form-label">Nombre</label>
                        <input asp-for="Nombres" class="form-control" placeholder="Nombre" />
                        <span asp-validation-for="Nombres" class="text-danger small"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Apellido</label>
                        <input asp-for="Apellidos" class="form-control" placeholder="Apellido" />
                        <span asp-validation-for="Apellidos" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-2">
                    <label class="form-label">Sexo</label>
                    <select asp-for="Sexo" class="form-select">
                        <option value="">Seleccione</option>
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                        <option value="Otro">Otro</option>
                    </select>
                    <span asp-validation-for="Sexo" class="text-danger small"></span>
                </div>

                <div class="mt-2">
                    <label class="form-label">Celular</label>
                    <input asp-for="Celular" class="form-control" placeholder="Ej. 999999999" />
                    <span asp-validation-for="Celular" class="text-danger small"></span>
                </div>

                <div class="mt-2">
                    <label class="form-label">Fecha de nacimiento</label>
                    <input asp-for="FechaNacimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                </div>

                <div class="form-check mt-3">
                    <input asp-for="EsMayorEdad" class="form-check-input" />
                    <label asp-for="EsMayorEdad" class="form-check-label"></label>
                </div>

                @if (!ViewData.ModelState.IsValid && !Model.EsMayorEdad)
                {
                    <span class="text-danger small">
                        Debes confirmar que eres mayor de edad.
                    </span>
                }


                <button class="btn btn-dark w-100 mt-3" type="submit">Continuar</button>

                <div class="text-center text-muted mt-2">1/3</div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
