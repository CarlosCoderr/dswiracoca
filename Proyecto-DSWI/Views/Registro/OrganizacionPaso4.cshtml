@model Proyecto_DSWI.Models.RegistroOrganizacionPaso4VM
@{
    ViewData["Title"] = "Registro Organización - Paso 4";
}

<div class="container mt-4" style="max-width:520px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-link p-0" asp-action="OrganizacionPaso3">Regresa</a>
        <div class="text-muted small">Pag. Registro Organización 4</div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="text-center mb-3">Verificación y términos</h5>

            <div class="alert alert-secondary small">
                Revisa tus datos antes de finalizar. (En una mejora futura, aquí mostramos un resumen.)
            </div>

            <form asp-action="OrganizacionPaso4" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="form-check mt-3">
                    <input asp-for="AceptaTerminos" class="form-check-input" />
                    <label asp-for="AceptaTerminos" class="form-check-label"></label>
                </div>
                <span asp-validation-for="AceptaTerminos" class="text-danger small"></span>

                <div class="form-check mt-2">
                    <input asp-for="AutorizaDatos" class="form-check-input" />
                    <label asp-for="AutorizaDatos" class="form-check-label"></label>
                </div>
                <span asp-validation-for="AutorizaDatos" class="text-danger small"></span>

                <button class="btn btn-dark w-100 mt-3" type="submit">Crear cuenta de organización</button>
                <div class="text-center text-muted mt-2">4/4</div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
