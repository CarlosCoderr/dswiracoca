@model Proyecto_DSWI.Models.RegistroOrganizacionPaso1VM
@{
    ViewData["Title"] = "Registro Organización - Paso 1";
}

<div class="container mt-4" style="max-width:520px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-link p-0" href="javascript:history.back()">Regresa</a>
        <div class="text-muted small">Pag. Registro Organización 1</div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="text-center mb-3">Cuenta del responsable</h5>

            <form asp-action="OrganizacionPaso1" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="row g-2">
                    <div class="col-6">
                        <label class="form-label">Nombre</label>
                        <input asp-for="NombresResponsable" class="form-control" placeholder="Nombre" />
                        <span asp-validation-for="NombresResponsable" class="text-danger small"></span>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Apellido</label>
                        <input asp-for="ApellidosResponsable" class="form-control" placeholder="Apellido" />
                        <span asp-validation-for="ApellidosResponsable" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-2">
                    <label class="form-label">Celular</label>
                    <input asp-for="CelularResponsable" class="form-control" placeholder="Ej. 999999999" />
                    <span asp-validation-for="CelularResponsable" class="text-danger small"></span>
                </div>

                <div class="mt-2">
                    <label class="form-label">Correo</label>
                    <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>


                <div class="input-group mt-2">
                    <label class="form-label w-100">Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" id="passwordInput" />
                    <button type="button" class="btn btn-outline-secondary"
                            onclick="togglePassword()">
                        👁
                    </button>
                    </div>
        

                <script>
                    function togglePassword() {
                        const input = document.getElementById("passwordInput");
                        input.type = input.type === "password" ? "text" : "password";
                    }
                </script>


                <div class="form-check mt-3">
                    <input asp-for="EsMayorEdad" class="form-check-input" />
                    <label asp-for="EsMayorEdad" class="form-check-label"></label>
                </div>

                @if (!ViewData.ModelState.IsValid && !Model.EsMayorEdad)
                {
                    <span class="text-danger small">
                        Debes confirmar que eres mayor de edad.
                    </span>
                }

                <button class="btn btn-dark w-100 mt-3" type="submit">Continuar</button>
                <div class="text-center text-muted mt-2">1/4</div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
